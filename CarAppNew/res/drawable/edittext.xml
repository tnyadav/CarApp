<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
    <shape android:shape="rectangle">
        <gradient android:startColor="#003245"
            android:centerColor="#003245" android:endColor="#003245"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="0dp" android:color="#1d89b7" />
        <corners android:radius="7dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
</item>
<item android:state_focused="true">
    <shape>
         <gradient android:startColor="#003245"
            android:centerColor="#003245" android:endColor="#003245"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="1dp" android:color="#1d89b7" />
        <corners android:radius="0dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
</item>
<item>
    <shape>
        <gradient android:startColor="#003245"
            android:centerColor="#003245" android:endColor="#003245"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="1dp" android:color="#1d89b7" />
        <corners android:radius="0dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
</item>

</selector>