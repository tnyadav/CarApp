<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <!--
         <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_back"
        android:gravity="center"
        android:text="Customer Data"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/lavel_size_header"
        android:textStyle="bold" />
    -->

    <ScrollView
        android:id="@+id/LinearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_padding_medium"
        android:layout_marginRight="@dimen/layout_padding_medium"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_padding_large"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Branch"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Branch"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:orientation="horizontal"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Salesperson"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/saleperson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Sale Person"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Customer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:ellipsize="end"
                    android:hint="Customer"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Contact Number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contactno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:ellipsize="end"
                    android:hint="Contact Number"
                    android:inputType="number"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:background="#F7F7F7"
                android:padding="@dimen/layout_padding_small"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Company"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/company_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/company_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Private"
                        android:textColor="@color/white"
                        android:textSize="@dimen/lavel_size" />

                    <EditText
                        android:id="@+id/company"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_padding_large"
                        android:layout_weight="1"
                        android:background="@drawable/edittext"
                        android:ellipsize="end"
                        android:hint="Company"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/lavel_size" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/fleet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:background="@drawable/spiner_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Email"
                    android:inputType="textPostalAddress"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Car Make"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:ellipsize="end"
                    android:hint="Make"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Car Model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:ellipsize="end"
                    android:hint="Model"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Year"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:ellipsize="end"
                    android:hint="Year"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Odometer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/odometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:ellipsize="end"
                    android:hint="Odometer"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Reg. Number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Registration Plate No."
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Job Entry Date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_small"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Job Entry Time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_small"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:hint="Time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custreson_for_visit_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/cell"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:padding="@dimen/layout_padding_small"
                    android:text="Customer reason for visit:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lavel_size_header"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_cust_reson_for_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/cust_reson_for_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/layout_padding_large"
                        android:layout_marginLeft="@dimen/layout_padding_large"
                        android:layout_marginRight="@dimen/layout_padding_large"
                        android:layout_marginTop="@dimen/layout_padding_large"
                        android:background="@drawable/blue_button"
                        android:drawableLeft="@drawable/add"
                        android:text=" ADD NEW"
                        android:textColor="@color/background"
                        android:textSize="@dimen/lavel_size_small" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/customer_data_1_next"
                android:layout_width="@dimen/arrow_dim"
                android:layout_height="@dimen/arrow_dim"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/layout_padding_small"
                android:background="@drawable/arrow_down_red" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>